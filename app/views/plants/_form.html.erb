
<div class=" form-text form-style col-6 offset-3 border p-4 bg-white">
<%= simple_form_for [plant] do |f| %>
    <%= f.input :name, required: false, placeholder: 'please enter a plant name' %>
    <%= f.input :photo, as: :file %>
    <%= f.input :description, required: false, class: ".bg-light", placeholder: 'please enter a description'  %>
    <%= f.input :address, required: false, placeholder: 'please enter an address'  %>
    <%= f.button :submit, class: "btn btn-success text-center", id: "create-plant-btn" %>
  <% end %>
</div>
